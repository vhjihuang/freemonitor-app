{
  "name": "freemonitor-app",
  "private": true,
  "scripts": {
    "docs:sync": "python scripts/document_sync.py full",
    "docs:tasks": "python scripts/document_sync.py tasks",
    "docs:changelog": "python scripts/document_sync.py changelog",
    "docs:bidirectional": "python scripts/document_sync.py bidirectional",
    "docs:preview": "cd docs && python -m http.server 8000",
    "dev:sync": "npm run docs:sync && echo '开发文档已同步'",
    "preinstall": "npx only-allow pnpm",
    "dev": "kill-port 3001 && turbo run dev",
    "build": "turbo run build",
    "start": "node scripts/start-production.js",
    "start:legacy": "turbo run start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf node_modules pnpm-lock.yaml && pnpm -r exec -- rimraf node_modules || true"
  },
  "devDependencies": {
    "@freemonitor/eslint-config": "workspace:*",
    "@types/node": "^20.19.11",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "kill-port": "^2.0.1",
    "only-allow": "^1.0.0",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.4.17",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20.0.0 <23.0.0"
  },
  "pnpm": {
    "overrides": {
      "@nestjs/common": "^10.0.0",
      "@nestjs/core": "^10.0.0",
      "react": "^18.3.1",
      "react-dom": "^18.3.1",
      "@types/react": "^18.3.1",
      "@types/react-dom": "^18.3.1"
    }
  },
  "dependencies": {
    "critters": "^0.0.25"
  }
}