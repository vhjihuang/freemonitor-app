{
  "$schema": "https://turborepo.com/schema.v2.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "out/**"],
      "exclude": ["apps/frontend/.next/standalone/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "exclude": ["apps/frontend/.next/standalone/**"]
    }
  }
}