# apps/backend/.env.example
# 数据库URL（部署时必须修改为实际的数据库连接信息）
# 部署时必须修改：DATABASE_URL=postgresql://username:password@localhost:5432/monitordb
DATABASE_URL=postgresql://username:password@localhost:5432/monitordb

PORT=3001
NODE_ENV=production

# CORS（部署时必须修改为实际的前端域名）
# 部署时必须修改：FRONTEND_URL=https://your-domain.vercel.app
FRONTEND_URL=https://your-domain.vercel.app

# 安全配置（部署时必须修改为强随机密钥）
# 部署时必须修改：JWT_SECRET=your-jwt-secret-key
JWT_SECRET=your-jwt-secret-key

# 部署时必须修改：CSRF_SECRET=your-csrf-secret-key
CSRF_SECRET=your-csrf-secret-key

API_RATE_LIMIT=100

# Redis（部署时根据实际Redis配置修改）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Development Environment
DEV_SKIP_AUTH=false
DEV_DETAILED_LOGS=true
DEV_MOCK_EXTERNAL_SERVICES=false
DEV_USER_ID=cmf8gshjd00003z1v0wh8b8to
DEV_USER_EMAIL=e2e@freemonitor.dev
DEV_USER_NAME=E2E User
DEV_USER_ROLE=USER

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Debug Configuration
DEBUG_ENABLED=false
DEBUG_NAMESPACES=app:*,auth:*,database:*

# 邮件服务配置
# QQ邮箱SMTP配置
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_SECURE=false  # 对于端口587，使用STARTTLS，secure设为false
# SMTP_PORT=465    # 如果使用端口465，需要设置SMTP_SECURE=true
SMTP_USER=your-qq-email@qq.com
SMTP_PASS=your-qq-email-authorization-code  # 注意：这是QQ邮箱授权码，不是登录密码
FROM_EMAIL=no-reply@your-domain.com
APP_URL=http://localhost:3000