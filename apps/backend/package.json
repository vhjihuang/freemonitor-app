{
  "name": "backend",
  "version": "1.0.0",
  "description": "FreeMonitor backend API",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist && pnpm --filter @freemonitor/types build",
    "build": "nest build",
    "postbuild": "echo 'Build completed. Run migrations manually in production.'",
    "start": "node dist/src/main",
    "start:prod": "node dist/src/main",
    "start:dev": "nest start --watch",
    "dev": "nest start --watch",
    "lint": "eslint ../.. --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint ../.. --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --testMatch \"<rootDir>/src/**/*.e2e-spec.ts\"",
    "test:pact": "jest --config test/jest.pact.config.js",
    "test:pact:publish": "pact-broker publish ./pacts --consumer-app-version $VERSION --broker-base-url $PACT_BROKER_BASE_URL",
    "typecheck": "tsc --noEmit",
    "docs:generate": "typedoc",
    "docs:serve": "typedoc --watch",
    "docs:validate": "typedoc --help",
    "prisma:generate": "pnpm prisma generate",
    "prisma:migrate": "pnpm prisma migrate deploy",
    "prisma:seed": "if [ \"$NODE_ENV\" != \"production\" ] || [ \"$RENDER_SEED\" = \"true\" ]; then ts-node prisma/seed.ts; else echo 'Seed script is disabled in production'; fi",
    "prisma:studio": "pnpm prisma studio",
    "postinstall": "pnpm prisma:generate",
    "g": "nest generate",
    "generate": "nest generate"
  },
  "dependencies": {
    "@freemonitor/types": "workspace:*",
    "@nestjs/bull": "^11.0.4",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/websockets": "^10.0.0",
    "@prisma/client": "^6.15.0",
    "@tirke/node-cache-manager-ioredis": "^3.6.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/nodemailer": "^7.0.1",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.7",
    "csrf": "^3.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.0",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.1.0",
    "rxjs": "^7.0.0",
    "socket.io": "^4.8.0",
    "supertest": "^7.1.4",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@pact-foundation/pact": "^16.0.4",
    "@types/bcrypt": "^6.0.0",
    "@types/bull": "^4.10.4",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@types/passport-jwt": "^4.0.1",
    "jest": "^29.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.15.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typedoc-plugin-mermaid": "^1.12.0",
    "typescript": "^5.0.0"
  }
}