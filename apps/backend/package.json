{
  "name": "backend",
  "version": "1.0.0",
  "description": "FreeMonitor backend API",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "postbuild": "echo 'Build completed. Run migrations manually in production.'",
    "start": "node dist/src/main",
    "start:prod": "pnpm prisma:migrate && node dist/src/main",
    "start:dev": "nodemon",
    "dev": "pnpm start:dev",
    "lint": "eslint 'src/**/*.{ts}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts}' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "pnpm prisma generate",
    "prisma:migrate": "pnpm prisma migrate deploy",
    "prisma:studio": "pnpm prisma studio",
    "postinstall": "pnpm prisma:generate"
  },
  "dependencies": {
    "@freemonitor/types": "workspace:*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^6.15.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.0",
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.0.0",
    "@types/node": "^22.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.15.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}