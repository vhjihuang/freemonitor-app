{
  "name": "backend",
  "version": "1.0.0",
  "description": "FreeMonitor backend API",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist && pnpm --filter @freemonitor/types build",
    "build": "nest build",
    "postbuild": "echo 'Build completed. Run migrations manually in production.'",
    "start": "node dist/src/main",
    "start:prod": "pnpm prisma:migrate && node dist/src/main",
    "render:build": "pnpm install && pnpm prisma generate && pnpm run build",
    "render:start": "pnpm prisma migrate deploy && node dist/src/main",
    "start:dev": "nodemon",
    "dev": "pnpm start:dev",
    "lint": "eslint 'src/**/*.{ts}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts}' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --testMatch \"<rootDir>/src/**/*.e2e-spec.ts\"",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "pnpm prisma generate",
    "prisma:migrate": "pnpm prisma migrate deploy",
    "prisma:seed": "if [ \"$NODE_ENV\" != \"production\" ] || [ \"$RENDER_SEED\" = \"true\" ]; then ts-node prisma/seed.ts; else echo 'Seed script is disabled in production'; fi",
    "prisma:studio": "pnpm prisma studio",
    "postinstall": "pnpm prisma:generate",
    "g": "nest generate",
    "generate": "nest generate"
  },
  "dependencies": {
    "@freemonitor/types": "workspace:*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.15.0",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "helmet": "^8.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.0",
    "rxjs": "^7.0.0",
    "supertest": "^7.1.4",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.0.0",
    "@types/node": "^22.0.0",
    "@types/passport-jwt": "^4.0.1",
    "jest": "^29.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.15.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}